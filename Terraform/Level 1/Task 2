resource "aws_security_group" "devops-sg" {
    name= "devops-sg"
    description= "Security group for Nautilus App Servers"
}

resource "aws_vpc_security_group_ingress_rule" "devops-sg_http" {
  security_group_id = aws_security_group.devops-sg.id
  from_port         = 80
  ip_protocol       = "http"
  to_port           = 80
  cidr_ipv4         = "0.0.0.0/0"
}

resource "aws_vpc_security_group_ingress_rule" "devops-sg_ssh" {
  security_group_id = aws_security_group.devops-sg.id
  from_port         = 22
  ip_protocol       = "ssh"
  to_port           = 22
  cidr_ipv4         = "0.0.0.0/0"
}
