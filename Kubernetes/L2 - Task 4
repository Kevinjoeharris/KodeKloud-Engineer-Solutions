apiVersion: v1
kind: Pod
metadata:
  name: print-envars-greeting
spec:
  restartPolicy: Never
  containers:
    - name: print-env-container
      image: bash:latest
      env:
        - name: GREETING
          value: "Welcome to" 
        - name: COMPANY
          value: "DevOps" 
        - name: GROUP
          value: "Ltd" 
      args: ["/bin/sh", "-c", 'echo "$(GREETING) $(COMPANY) $(GROUP)"']

kubectl logs -f print-envars-greeting
