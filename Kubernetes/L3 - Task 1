apiVersion: apps/v1
kind: Deployment
metadata:
  name: httpd-deployment-datacenter
spec:
  template:
    metadata:
      labels:
        app: httpd
    spec:
      containers:
        - name: httpd-container-xfusion
          image: httpd:latest
          ports: 
            - containerPort: 80
  replicas: 2
  selector:
    matchLabels:
      app: httpd 

---

apiVersion: v1
kind: Service
metadata:
  name: httpd-service-datacenter
spec:
  type: NodePort
  selector:
    app: httpd
  ports:
    - nodePort: 30004
      port: 80
      targetPort: 80
