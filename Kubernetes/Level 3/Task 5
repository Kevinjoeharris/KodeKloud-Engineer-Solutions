kubectl create secret generic media --from-file=/opt/media.txt

apiVersion: v1
kind: Pod
metadata:
  name: secret-devops
spec:
  containers:
    - name: secret-container-devops
      image: fedora:latest
      command: ["/bin/sh", "-c", "sleep 3600"]
      volumeMounts:
        - name: secret-volume
          mountPath: /opt/games
          readOnly: true
  volumes:
    - name: secret-volume
      secret:
        secretName: media
