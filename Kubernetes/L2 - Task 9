apiVersion: apps/v1
kind: Deployment
metadata:
  name: nodeapp-deployment-datacenter
spec:
  template:
    metadata:
      labels:
        app: nodeapp
    spec:
      containers:
        - name: nodeapp-container
          image: gcr.io/kodekloud/centos-ssh-enabled:node
          ports: 
            - containerPort: 8080
  replicas: 2
  selector:
    matchLabels:
      app: nodeapp 

---

apiVersion: v1
kind: Service
metadata:
  name: nodeapp-service
spec:
  type: NodePort
  selector:
    app: nodeapp
  ports:
    - nodePort: 30012
      port: 8080
      targetPort: 8080
