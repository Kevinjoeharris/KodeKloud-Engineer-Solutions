apiVersion: apps/v1
kind: Deployment
metadata:
  name: grafana-deployment-datacenter
spec:
  template:
    metadata:
      labels:
        app: grafana
    spec:
      containers:
        - name: grafana-container
          image: grafana/grafana
          ports: 
            - containerPort: 3000
  replicas: 1
  selector:
    matchLabels:
      app: grafana 

---

apiVersion: v1
kind: Service
metadata:
  name: grafana-service
spec:
  type: NodePort
  selector:
    app: grafana
  ports:
    - nodePort: 32000
      port: 3000
      targetPort: 3000
