kubectl create namespace devops

apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: devops
  name: httpd-deploy
spec:
  template:
    metadata:
      labels:
        app: httpd
    spec:
      containers:
        - name: httpd
          image: httpd:2.4.25
          ports: 
            - containerPort: 80
  replicas: 2
  selector:
    matchLabels:
      app: httpd 
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 2
      maxSurge: 1

---

apiVersion: v1
kind: Service
metadata:
  namespace: devops
  name: httpd-service
spec:
  type: NodePort
  selector:
    app: httpd
  ports:
    - nodePort: 30008
      port: 80
      targetPort: 80

kubectl set image deployment httpd-deploy httpd=httpd:2.4.43 -n=devops

kubectl rollout undo deployment httpd-deploy -n=devops 
